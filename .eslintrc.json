{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "overrides": [
    {
      "files": ["lib/rules/**/*.rules.js"],
      "rules": {
        "no-restricted-syntax": [
          "off", {
            "selector": "iterators/generators"
          }
        ]
      }
    }
  ]
}
